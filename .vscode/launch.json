{
    "version": "0.2.0",
    "configurations": [
        // -------------------------------------------------------------------------------
        // App - PHP - Debug
        // -------------------------------------------------------------------------------
        {
            "name": "Debug for PHP",
            "type": "php",
            "request": "launch",                                   // Symfony Local Server
            "port": 9003,
            "pathMappings": {
                "{project path}/app": "${workspaceFolder}"         // <-- Modify {your project path}
            }
        },
        // -------------------------------------------------------------------------------
        // App - Javascript - Debug
        // -------------------------------------------------------------------------------
        {
            "name": "Debug for Javascript",
            "type": "chrome",
            "request": "launch",                                   // Symfony Local Server
            "url": "http://127.0.0.1:8000",
            "webRoot": "${workspaceFolder}/public",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceFolder}/*"
            }
        }
    ],
    "compounds": [
        {
            "name": "Debug for Web App",
            "configurations": ["Debug for PHP", "Debug for Javascript"]
        }
    ]
}
